// GoTTY configuration file for ctr-agent
// This configures the terminal to use dark text on a light background

preferences {
  // Light background with dark text
  background_color = "rgb(255, 255, 255)"
  foreground_color = "rgb(0, 0, 0)"

  // Cursor styling
  cursor_color = "rgba(0, 0, 0, 0.5)"

  // Color palette - adjusted for light background
  // These are the standard 16 ANSI colors
  color_palette_overrides = [
    // Dark colors (0-7)
    "rgb(0, 0, 0)",        // Black
    "rgb(205, 0, 0)",      // Red
    "rgb(0, 205, 0)",      // Green
    "rgb(205, 205, 0)",    // Yellow
    "rgb(0, 0, 238)",      // Blue
    "rgb(205, 0, 205)",    // Magenta
    "rgb(0, 205, 205)",    // Cyan
    "rgb(229, 229, 229)",  // White/Light gray
    // Bright colors (8-15)
    "rgb(127, 127, 127)",  // Bright black (dark gray)
    "rgb(255, 0, 0)",      // Bright red
    "rgb(0, 255, 0)",      // Bright green
    "rgb(255, 255, 0)",    // Bright yellow
    "rgb(92, 92, 255)",    // Bright blue
    "rgb(255, 0, 255)",    // Bright magenta
    "rgb(0, 255, 255)",    // Bright cyan
    "rgb(255, 255, 255)",  // Bright white
  ]
}
